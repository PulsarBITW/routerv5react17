{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "skipLibCheck": true,

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@app": ["src/app"],
      "@app/*": ["src/app/*"],

      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],

      "@entities": ["src/entities"],
      "@entities/*": ["src/entities/*"],

      "@features": ["src/features"],
      "@features/*": ["src/features/*"],

      "@widgets": ["src/widgets"],
      "@widgets/*": ["src/widgets/*"],

      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
